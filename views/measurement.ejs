<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mediciones de Temperatura</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/modules/data.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
  <script src="https://code.highcharts.com/modules/export-data.js"></script>
  <script src="https://code.highcharts.com/modules/accessibility.js"></script>
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f7f9fc;
      color: #333;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #007bff;
      padding: 20px;
      text-align: center;
      color: #fff;
      position: relative;
    }
    header h1 {
      margin: 0;
      font-size: 2.5rem;
      letter-spacing: 1px;
    }
    header .cerrar-sesion {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      background-color: #dc3545;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      position: absolute;
      top: 20px;
      right: 20px;
      display: flex;
      align-items: center;
    }
    header .cerrar-sesion i {
      margin-right: 5px;
    }
    header .cerrar-sesion:hover {
      background-color: #c82333;
    }
    #container {
      margin: 40px auto;
      width: 90%;
      max-width: 1200px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      background-color: #fff;
      padding: 20px;
    }
    .highcharts-description {
      text-align: center;
      font-size: 1.2rem;
      color: #666;
      margin: 20px 0;
    }
    footer {
      background-color: #007bff;
      padding: 15px;
      text-align: center;
      color: #fff;
      position: fixed;
      width: 100%;
      bottom: 0;
    }
    footer a {
      color: #ffc107;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
    .temperatura-actual {
      display: flex;
      justify-content: space-around;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }
    .temperatura-actual .cuadro {
      background-color: #fff;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 200px;
      text-align: center;
      margin: 10px;
      transition: transform 0.3s ease;
    }
    .temperatura-actual .cuadro:hover {
      transform: translateY(-5px);
    }
    .temperatura-actual .cuadro .titulo {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .temperatura-actual .cuadro .valor {
      font-size: 3rem;
      font-weight: bold;
      color: #007bff;
    }
    .graficas {
      display: flex;
      justify-content: space-around;
      margin-top: 40px ;
      flex-wrap: wrap;
    }
    .grafica {
      width: 45%;
      height: 300px;
      margin: 20px;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .resumen {
      background-color: #fff;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 90%;
      margin: 20px auto;
    }
    .resumen .titulo {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .resumen .descripcion {
      font-size: 1.2rem;
      color: #666;
    }
  </style>
</head>
<body>
  <header>
    <h1>Bienvenido, <%= usuario %></h1>
    <a href="#" class="cerrar-sesion">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
  </header>
  <main>
    <div id="container">
      <div class="temperatura-actual">
        <div class="cuadro">
          <p class="titulo">Serie actual</p>
          <p id="valor-serie" class="valor">--</p>
        </div>
        <div class="cuadro">
          <p class="titulo">Temperatura actual</p>
          <p id="valor-temperatura" class="valor">--</p>
        </div>
      </div>
      <div class="resumen">
        <p class="titulo">Resumen</p>
        <p class="descripcion">La temperatura actual es de <span id="resumen-temperatura">--</span>°C, con una serie actual de <span id="resumen-serie">--</span>°C.</p>
      </div>
      <div class="graficas">
        <div class="grafica" id="grafica-serie"></div>
        <div class="grafica" id="grafica-temperatura"></div>
      </div>
    </div>
  </main>
  <footer>
    <p>&copy; 2023 - <%= usuario %></p>
    <a href="#">Acerca de</a>
  </footer>
  <script>
    function updateChart() {
      fetch('/data')
        .then(response => response.json())
        .then(data => {
          const chartSerie = Highcharts.charts[0];
          const chartTemperatura = Highcharts.charts[1];
          const serieData = data.map(item => [item.Serie, parseFloat(item.Serie)]);
          const temperaturaData = data.map(item => [item.Temperatura, parseFloat(item.Temperatura)]);
          chartSerie.series[0].setData(serieData);
          chartTemperatura.series[0].setData(temperaturaData);
          document.getElementById('valor-serie').innerHTML = serieData[serieData.length - 1][1].toFixed(2) + '°C';
          document.getElementById('valor-temperatura').innerHTML = temperaturaData[temperaturaData.length - 1][1].toFixed(2) + '°C';
          document.getElementById('resumen-temperatura').innerHTML = temperaturaData[temperaturaData.length - 1][1].toFixed(2) + '°C';
          document.getElementById('resumen-serie').innerHTML = serieData[serieData.length - 1][1].toFixed(2) + '°C';
        })
        .catch(error => console.error('Error fetching data:', error));
    }
    updateChart();
    setInterval(updateChart, 60000); // actualiza la gráfica cada 1 minuto
  </script>
</body>
</html>