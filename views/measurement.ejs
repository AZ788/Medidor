<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mediciones de Temperatura</title>
  <link href="/estilos.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/modules/data.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
  <script src="https://code.highcharts.com/modules/export-data.js"></script>
  <script src="https://code.highcharts.com/modules/accessibility.js"></script>
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f0f4f8;
      color: #333;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #0056b3;
      padding: 20px;
      text-align: center;
      color: #fff;
      position: relative;
    }
    header h1 {
      margin: 0;
      font-size: 2.5rem;
      letter-spacing: 1px;
    }
    header .cerrar-sesion {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      background-color: #ff6347;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      position: absolute;
      top: 20px;
      right: 20px;
      display: flex;
      align-items: center;
    }
    header .cerrar-sesion i {
      margin-right: 5px;
    }
    header .cerrar-sesion:hover {
      background-color: #ff4500;
    }
    #container {
      margin: 40px auto;
      width: 90%;
      max-width: 1200px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      background-color: #fff;
      padding: 20px;
    }
    .highcharts-description {
      text-align: center;
      font-size: 1.2rem;
      color: #666;
      margin: 20px 0;
    }
    footer {
      background-color: #0056b3;
      padding: 15px;
      text-align: center;
      color: #fff;
      position: fixed;
      width: 100%;
      bottom: 0;
    }
    footer a {
      color: #ff6347;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
    .temperatura-actual {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <header>
    <h1>Bienvenido, <%= usuario %></h1>
    <a href="/logout" class="cerrar-sesion">
      <i class="fas fa-sign-out-alt"></i> Cerrar sesión
    </a>
  </header>
  <div class="temperatura-actual">
    <span id="temperatura-serie">Serie: <span id="valor-serie">0°C</span></span>
    <span id="temperatura-temperatura">Temperatura: <span id="valor-temperatura">0°C</span></span>
  </div>
  <div id="container"></div>
  <p class="highcharts-description">Gráfica de la temperatura de la termocupla y el PT100.</p>
  <script>
    Highcharts.chart('container', {
      chart: {
        type: 'areaspline'
      },
      title: {
        text: 'Termocupla vs PT100',
        style: {
          fontSize: '1.8rem',
          fontWeight: 'bold'
        }
      },
      series: [{
        name: 'Serie',
        data: []
      }, {
        name: 'Temperatura',
        data: []
      }],
      xAxis: {
        type: 'datetime',
        title: {
          text: 'Tiempo'
        },
        labels: {
          format: '{value:%Y-%m-%d %H:%M:%S}'
        },
        tickInterval: 1000 * 60 * 60
      },
      yAxis: {
        title: {
          text: 'Temperatura (°C)'
        },
        max: 250,
        labels: {
          formatter: function() {
            return this.value + '°C';
          }
        }
      },
      tooltip: {
        shared: true,
        crosshairs: true
      },
      plotOptions: {
        areaspline: {
          fillOpacity: 0.5
        }
      }
    });
    function updateChart() {
      fetch('/data')
        .then(response => response.json())
        .then(data => {
          const chart = Highcharts.charts[0];
          const serieData = data.map(item => [Date.parse(item.Fecha), parseFloat(item.Serie)]);
          const temperaturaData = data.map(item => [Date.parse(item.Fecha), parseFloat(item.Temperatura)]);
          chart.series[0].setData(serieData);
          chart.series[1].setData(temperaturaData);
          document.getElementById('valor-serie').innerHTML = serieData[serieData.length - 1][1].toFixed(2) + '°C';
          document.getElementById('valor-temperatura').innerHTML = temperaturaData[temperaturaData.length - 1][1].toFixed(2) + '°C';
        })
        .catch(error => console.error('Error fetching data:', error));
    }
    setInterval(updateChart, 500);
    updateChart();
  </script>
  <footer>
    <p>Temperatubies 2024 | <a href="#">Términos y condiciones</a></p>
  </footer>
</body>
</html>