<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mediciones de Temperatura</title>
  <link href="/estilos.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
  <script src="https://code.highcharts.com/highcharts.js"></script>
  <script src="https://code.highcharts.com/modules/data.js"></script>
  <script src="https://code.highcharts.com/modules/exporting.js"></script>
  <script src="https://code.highcharts.com/modules/export-data.js"></script>
  <script src="https://code.highcharts.com/modules/accessibility.js"></script>
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f0f4f8;
      color: #333;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #0056b3;
      padding: 20px;
      text-align: center;
      color: #fff;
      position: relative;
    }
    header h1 {
      margin: 0;
      font-size: 2.5rem;
      letter-spacing: 1px;
    }
    header .cerrar-sesion {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      background-color: #ff6347;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s ease;
      position: absolute;
      top: 20px;
      right: 20px;
      display: flex;
      align-items: center;
    }
    header .cerrar-sesion i {
      margin-right: 5px;
    }
    header .cerrar-sesion:hover {
      background-color: #ff4500;
    }
    #container {
      margin: 40px auto;
      width: 90%;
      max-width: 1200px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      background-color: #fff;
      padding: 20px;
    }
    .highcharts-description {
      text-align: center;
      font-size: 1.2rem;
      color: #666;
      margin: 20px 0;
    }
    footer {
      background-color: #0056b3;
      padding: 15px;
      text-align: center;
      color: #fff;
      position: fixed;
      width: 100%;
      bottom: 0;
    }
    footer a {
      color: #ff6347;
      text-decoration: none;
    }
    footer a:hover {
      text-decoration: underline;
    }
    .temperatura-actual {
      display: flex;
      justify-content: space-around;
      margin-bottom: 20px;
    }
    .temperatura-actual .cuadro {
      background-color: #fff;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 200px;
      text-align: center;
    }
    .temperatura-actual .cuadro .titulo {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .temperatura-actual .cuadro .valor {
      font-size: 3rem;
      font-weight: bold;
      color: #0056b3;
    }
    .graficas {
      display: flex;
      justify-content: space-around;
      margin-top: 40px;
    }
    .grafica {
      width: 45%;
      height: 300px;
      margin: 20px;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0,  0, 0.1);
    }
  </style>
</head>
<body>
  <header>
    <h1>Bienvenido, <%= usuario %></h1>
 <a href="#" class="cerrar-sesion">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
  </header>
  <main>
    <div id="container">
      <div class="temperatura-actual">
        <div class="cuadro">
          <p class="titulo">Serie actual</p>
          <p id="valor-serie" class="valor">--</p>
        </div>
        <div class="cuadro">
          <p class="titulo">Temperatura actual</p>
          <p id="valor-temperatura" class="valor">--</p>
        </div>
      </div>
      <div class="graficas">
        <div class="grafica" id="grafica-serie"></div>
        <div class="grafica" id="grafica-temperatura"></div>
      </div>
    </div>
  </main>
  <footer>
    <p>&copy; 2023 - <%= usuario %></p>
    <a href="#">Acerca de</a>
  </footer>
  <script>
    function updateChart() {
      fetch('/data')
        .then(response => response.json())
        .then(data => {
          const chartSerie = Highcharts.charts[0];
          const chartTemperatura = Highcharts.charts[1];
          const serieData = data.map(item => {
            const fecha = new Date(item.Fecha);
            return [fecha.toLocaleString(), parseFloat(item.Serie)];
          });
          const temperaturaData = data.map(item => {
            const fecha = new Date(item.Fecha);
            return [fecha.toLocaleString(), parseFloat(item.Temperatura)];
          });
          chartSerie.series[0].setData(serieData);
          chartTemperatura.series[0].setData(temperaturaData);
          document.getElementById('valor-serie').innerHTML = serieData[serieData.length - 1][1].toFixed(2) + '°C';
          document.getElementById('valor-temperatura').innerHTML = temperaturaData[temperaturaData.length - 1][1].toFixed(2) + '°C';
        })
        .catch(error => console.error('Error fetching data:', error));
    }
    updateChart();
    setInterval(updateChart, 60000); // actualiza la gráfica cada 1 minuto
  </script>
</body>
</html>